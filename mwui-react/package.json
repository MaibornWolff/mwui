{
    "name": "@maibornwolff/mwui-react",
    "sideEffects": false,
    "version": "0.2.0",
    "description": "React specific wrapper for mwui",
    "repository": {
        "type": "git",
        "url": "https://github.com/MaibornWolff/mwui.git"
    },
    "scripts": {
        "build": "npm run clean && npm run compile",
        "clean": "rm -rf dist",
        "compile": "npm run tsc",
        "tsc": "tsc -p .",
        "rollup": "rollup -c",
        "release": "release-it"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "devDependencies": {
        "@types/jest": "23.3.9",
        "@types/node": "^18.14.5",
        "@types/react": "^18.0.33",
        "@types/react-dom": "^17.0.11",
        "jest": "^27.4.5",
        "jest-dom": "^3.0.2",
        "np": "^3.0.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^4.8.2"
    },
    "dependencies": {
        "@maibornwolff/mwui-stencil": "^0.2.0",
        "parcel-bundler": "^1.8.1"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "jest": {
        "preset": "ts-jest",
        "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
        "testPathIgnorePatterns": [
            "node_modules",
            "dist"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
